# Environment variables for Docker deployment
# Copy this file to .env and fill in your actual API keys

# Database Configuration
MONGODB_URI=mongodb://admin:password123@mongodb:27017/financial_simulator?authSource=admin
REDIS_URL=redis://redis:6379

# API Keys (REQUIRED - Replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
AGENTOPS_API_KEY=your_agentops_api_key_here

# Application Configuration
PYTHONPATH=/app
ENVIRONMENT=docker

# Server Configuration
HOST=0.0.0.0
PORT=8002

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Storage Configuration
TEMP_PDF_DIR=/app/temp_pdfs
OUTPUT_DIR=/app/output
MONTHLY_OUTPUT_DIR=/app/monthly_output

# Security Configuration
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=*

# Performance Configuration
MAX_WORKERS=4
TIMEOUT=300

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_AGENTOPS=true
ENABLE_DETAILED_LOGGING=true
